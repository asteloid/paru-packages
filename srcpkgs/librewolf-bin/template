# Template file for 'librewolf-bin'
pkgname=librewolf-bin
_pkgname=librewolf
version=94.0.2
revision=1
archs="x86_64"
create_wrksrc=yes
hostmakedepends="tar"
depends="dbus-glib ffmpeg gtk+3 nss nspr libXt"
short_desc="Community-maintained fork of Firefox, focused on privacy, security and freedom."
maintainer="parutalker <93087312+parutalker@users.noreply.github.com>"
license="MPL-2.0"
homepage="https://librewolf.net"
#distfiles="https://fresh.librewolf.io/${_pkgname}-${version}/${_pkgname}-${version}.en-US.ubuntu20.x86_64.deb"
distfiles="https://mpr.craftcat.dev/pool/focal/main/libr/${pkgname}/${pkgname}_${version}-1_amd64.deb"
checksum=272b7a34c9284754e206b8538c56e4a830de64068caa04f7b78bf278d93fea7a

do_extract() {
	ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${pkgname}_${version}-1_amd64.deb
	bsdtar xpvf data.tar.gz
	mkdir -p usr/lib
	mkdir -p usr/share/applications
	cp -r usr/local/lib/* usr/lib/
	cp -r usr/local/share/* usr/share/
	rm -rf usr/local
	# remove symlink
	rm usr/lib/librewolf-bin/librewolf.desktop
	cp -f ${FILESDIR}/start-librewolf.desktop usr/lib/librewolf-bin/librewolf.desktop
	cp -f ${FILESDIR}/start-librewolf.desktop usr/share/applications/librewolf.desktop
	#mv usr/local/share usr/
	#rm usr/bin/librewolf
}

do_install() {
	# Copy files
	cp -r usr ${DESTDIR}
	vbin ${FILESDIR}/librewolf	
}