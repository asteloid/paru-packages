# Template file for 'librewolf-bin'
pkgname=librewolf-bin
_pkgname=librewolf
version=95.0.2
revision=1
archs="x86_64"
create_wrksrc=yes
hostmakedepends="tar"
depends="dbus-glib ffmpeg gtk+3 nss nspr libXt"
short_desc="Community-maintained fork of Firefox, focused on privacy, security and freedom."
maintainer="parutalker <93087312+parutalker@users.noreply.github.com>"
license="MPL-2.0"
homepage="https://librewolf.net"
distfiles="https://gitlab.com/api/v4/projects/12829184/packages/generic/librewolf/95.0.2-1/LibreWolf-${version}-1.x86_64.tar.bz2"
checksum=8bacca4b1ada3892a13da66f62673230ed1762b2e1040b22478c8ca8ddede81d

do_install() {
	vmkdir usr/bin
	vmkdir usr/lib/${_pkgname}
	vmkdir usr/share/applications
	vmkdir usr/share/icons/hicolor/scalable/apps
	# Copy files
	vcopy "*" usr/lib/${_pkgname}/
	vcopy ${FILESDIR}/icon.svg usr/share/icons/hicolor/scalable/apps/${_pkgname}.svg
	vcopy ${FILESDIR}/${_pkgname}.desktop usr/share/applications/
	vbin ${FILESDIR}/librewolf	
}