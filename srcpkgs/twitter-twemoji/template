# Template file for 'twitter-twemoji'
pkgname=twitter-twemoji
version=13.1.0
revision=1
archs="x86_64"
create_wrksrc=yes
hostmakedepends="rpmextract"
short_desc="Twitter Emoji for everyone."
maintainer="Orphaned <orphan@voidlinux.org>"
license="MIT"
homepage="https://twemoji.twitter.com"
distfiles="https://kojipkgs.fedoraproject.org/packages/twitter-twemoji-fonts/${version}/2.fc35/noarch/twitter-twemoji-fonts-${version}-2.fc35.noarch.rpm"
checksum=949c2388ce39a8c2e4352433bac6635ed44a6630ec64a1fef4ab14029bc743ff

do_install() {
	vmkdir usr/share/fontconfig/conf.avail
	# Copy files
	vcopy "*" /
	install -m644 ${FILESDIR}/75-twemoji.conf ${DESTDIR}/usr/share/fontconfig/conf.avail
}